<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tadev.musicplayer">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MusicPlayerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.MusicPlayService">

            <intent-filter>
                <action android:name="com.tadev.musicmMediaPlayer.action.PLAY" />
                <action android:name="com.tadev.musicmMediaPlayer.action.PAUSE" />
                <action android:name="com.tadev.musicmMediaPlayer.action.PLAY_PAUSE" />
                <action android:name="com.tadev.musicmMediaPlayer.action.PLAY_BAR"/>
            </intent-filter>
        </service>

        <receiver android:name=".receivers.UpdateSeekbarReceiver">
            <intent-filter>
                <action android:name="com.tadev.musicplayer.action.ACTION_UPDATE" />
                <action android:name="com.tadev.musicplayer.UPDATE_MUSIC_PLAYBAR" />
                <action android:name="com.tadev.musicmMediaPlayer.state.STATE_PLAY"/>
                <action android:name="com.tadev.musicmMediaPlayer.state.STATE_PAUSE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
