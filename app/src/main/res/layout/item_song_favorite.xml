<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_favorite"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_favorite_imgSong"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_loading_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.tadev.musicplayer.supports.design.TextViewTitle
                        android:id="@+id/item_favorite_tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="@string/music_name"
                        android:textColor="@color/material_black"
                        android:textSize="@dimen/text_title_size"
                        android:textStyle="bold" />

                    <com.tadev.musicplayer.supports.design.TextViewTitle
                        android:id="@+id/item_favorite_tvSinger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/music_singer"
                        android:textSize="@dimen/text_singer_size" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:background="@color/material_grey_700" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.github.ivbaranov.mfb.MaterialFavoriteButton
                        android:id="@+id/item_favorite_btnFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:mfb_animate_unfavorite="true"
                        app:mfb_bounce_duration="300"
                        app:mfb_favorite_image="@drawable/ic_heart_favorite"
                        app:mfb_not_favorite_image="@drawable/ic_heart_not_favorite"
                        app:mfb_rotation_angle="360"
                        app:mfb_rotation_duration="400" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
